# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# JWT & Security
JWT_SECRET=# Generate a secret with `python -c "import secrets; print(secrets.token_urlsafe(64))"`
JWT_ALG=HS512
ACCESS_TTL_MIN=15
REFRESH_TTL_DAYS=30

# Uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,bmp,tif,tiff
MAX_FILE_SIZE=20MB
MAX_UPLOAD_FILES=10

# Triton
TRITON_URL=localhost:8001

# Async I/O
MAX_CONCURRENT_IO=10
