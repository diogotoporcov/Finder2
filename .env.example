# Database
DB_HOST=localhost
POSTGRES_DB=finder2
POSTGRES_USER=finder2
POSTGRES_PASSWORD=finder2
POSTGRES_PORT=5432

DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# JWT & Security
# Generate a safe JWT secret with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=
JWT_ALG=HS512
ACCESS_TTL_MIN=15
REFRESH_TTL_DAYS=30

# Uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/bmp,image/tiff
MAX_FILE_SIZE=20MB
MAX_UPLOAD_FILES=10
STORAGE_PATH=/storage

# Triton
TRITON_HOST=triton
TRITON_HTTP_PORT=8000
TRITON_GRPC_PORT=8001
TRITON_METRICS_PORT=8002
TRITON_URL=${TRITON_HOST}:${TRITON_GRPC_PORT}

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8080

# Async I/O
MAX_CONCURRENT_IO=10
